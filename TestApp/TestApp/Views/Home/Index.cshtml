@*model HomeModel*@

@model List<DataLayer.Entities.Directory>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="col-md-12">
        @*<h1 class="display-4">@Model.HelloMessage</h1>*@
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    <h2>@item.Title</h2>
                    <ul>
                        @if(item.Materials!=null)
                        {
                            foreach (var subItem in item.Materials)
                            {
                                <li>@subItem.Title</li>
                            }
                        }
                    </ul>
                </li>
            }
        </ul>
    </div>    
</div>
